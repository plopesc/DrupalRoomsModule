<?php

/**
 * @file
 * Install for Rooms Availability module - sets up the main Rooms Availability
 * table
 */

/**
 * Implements hook_field_schema().
 */
function rooms_availability_constraints_field_schema($field) {
  if ($field['type'] == 'rooms_availability_constraints_range') {
    return array(
      'columns' => array(
        'start_date' => array(
          'type' => 'varchar',
          'length' => 10,
          'not null' => TRUE,
        ),
        'end_date' => array(
          'type' => 'varchar',
          'length' => 10,
          'not null' => TRUE,
        ),
        'always' => array(
          'type' => 'int',
          'not null' => TRUE,
          'default' => 1,
        ),
        'constraint_type' => array(
          'type' => 'varchar',
          'length' => 20,
          'not null' => TRUE,
        ),
        'start_day' => array(
          'type' => 'int',
          'not null' => FALSE,
        ),
        'minimum_stay' => array(
          'type' => 'int',
          'not null' => FALSE,
        ),
        'maximum_stay' => array(
          'type' => 'int',
          'not null' => FALSE,
        ),
      ),
      'indexes' => array(
        'range' => array('start_date', 'end_date', 'minimum_stay', 'maximum_stay'),
        'range_day' => array('start_date', 'end_date', 'minimum_stay', 'maximum_stay', 'start_day'),
      ),
    );
  }
}
